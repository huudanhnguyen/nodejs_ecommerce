<!--Header-->
<div class="header-wrap animated d-flex border-bottom">
  <div class="container-fluid">
    <div class="row align-items-center">
      <!--Desktop Logo-->
      <div class="logo col-md-2 col-lg-2 d-none d-lg-block">
        <a href="/">
          <img src="/frontend/assets/images/logo.svg" alt="Belle"
            title="Belle" />
        </a>
      </div>
      <!--End Desktop Logo-->
      <div class="col-2 col-sm-3 col-md-3 col-lg-8">
        <div class="d-block d-lg-none">
          <button type="button" class="btn--link site-header__menu js-mobile-nav-toggle mobile-nav--open">
            <i class="icon anm anm-times-l"></i>
            <i class="anm anm-bars-r"></i>
          </button>
        </div>
        <!--Desktop Menu-->
        <nav class="grid__item" id="AccessibleNav">
          <!-- for mobile -->
          <ul id="siteNav" class="site-nav medium center hidearrow">
            <li class="lvl1 parent megamenu"><a href="/">Trang Chủ <i class="anm anm-angle-down-l"></i></a>
            </li>
            </li>
            <li class="lvl1 parent megamenu"><a href="/tat-ca-san-pham">Sản Phẩm <i class="anm anm-angle-down-l"></i></a>
            </li>
            <li class="lvl1 parent dropdown"><a href="#">Danh Mục<i class="anm anm-angle-down-l"></i></a>
              <ul class="dropdown">
                <% listCategory.forEach((category)=> { %>
                  <li><a href="/danh-muc/<%= category.id %> " class="site-nav"><%= category.name %></a></li>
                <%})%>
              </ul>
            </li>
            <% listMenu.forEach((Menu)=> { %>
              <li class="lvl1 parent megamenu"><a href="/<%= Menu.slug %>"><%= Menu.name %><i class="anm anm-angle-down-l"></i></a>
              <%})%>
          </ul>
        </nav>
        <!--End Desktop Menu-->
      </div>
      <!--Mobile Logo-->
      <div class="col-6 col-sm-6 col-md-6 col-lg-2 d-block d-lg-none mobile-logo">
        <div class="logo">
          <a href="/">
            <img src="frontend/assets/images/logo.svg" alt=""
              title="" />
          </a>
        </div>
      </div>
      <!--Mobile Logo-->
      
      <div class="col-4 col-sm-3 col-md-3 col-lg-2">
        <div class="site-cart">
          <a href="/cart" class="" title="Cart">
            <i class="icon anm anm-bag-l cart-icon"></i>
            <span id="CartCount" class="site-header__cart-count" data-cart-render="item_count">
   
               
            </span>
          </a>
        </div>
          <button type="button" class="search-trigger"><i class="icon anm anm-search-l"></i></button>
        </div>
      </div>
    </div>
  </div>
</div>
