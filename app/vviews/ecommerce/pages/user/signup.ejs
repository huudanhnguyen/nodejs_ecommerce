<%
    let showError=(checkError)=>{
        let html='';
        if(!checkError){
            return
        }
        else{
            checkError.forEach(element => {
                html+=`
                <div class="alert alert-danger" role="alert">
                ${element.msg}
                </div>
                `;
            });
        }
        return html
    }
%>
<div id="page-content">
    <!--Page Title-->
    <div class="page section-header text-center">
        <div class="page-title">
            <div class="wrapper"><h1 class="page-width">Tạo Một Tài Khoản</h1></div>
          </div>
    </div>
    <!--End Page Title-->
    
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 col-lg-6 main-col offset-md-3">
                <div class="mb-4">
                    <%- showError(error)  %>

                   <form method="post" action="/user/signup" id="CustomerLog inForm" accept-charset="UTF-8" class="contact-form">	
                      <div class="row">
                           <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                              <label for="CustomerEmail">Tên</label>
                              <input type="username" name="name" placeholder="" id="CustomerName" class="<%# errors.username && 'is-invalid' %>" autocorrect="off" autocapitalize="off" autofocus="">
                              <%# `<span class="error invalid-feedback">${errors.username}</span>` %>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label for="CustomerEmail">Email</label>
                                <input type="email" name="email" placeholder="" id="CustomerEmail" class="" autocorrect="off" autocapitalize="off" autofocus=""required>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label for="CustomerPassword">Mật Khẩu (Chiều Dài Từ 6 đến 20 Ký Tự)</label>
                                <input type="password" value="" name="password" placeholder="" id="CustomerPassword" class=""required>                        	
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="form-group">
                                <label for="CustomerPassword">Nhập Lại Mật Khẩu</label>
                                <input type="password" value="" name="confirmpassword" placeholder="" id="CustomerPassword" class=""required>                        	
                            </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="text-center col-12 col-sm-12 col-md-12 col-lg-12">
                            <input type="submit" class="btn mb-3" value="Tạo">
                        </div>
                     </div>
                 </form>
                </div>
               </div>
        </div>
    </div>
    
</div>
<!--End Body Content-->