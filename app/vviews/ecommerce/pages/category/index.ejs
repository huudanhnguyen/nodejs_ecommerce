                    <div class="sidebar_widget">
                        <div class="widget-title"><h2>Hàng Mới Về</h2></div>
                        <div class="widget-content">
                            <div class="list list-sidebar-products">
                              <div class="grid">
                                <% listProductNewArrivals.slice(0,4).forEach((items)=> { %>
                                    <div class="grid__item">
                                        <div class="mini-list-item">
                                          <div class="mini-view_image">
                                              <a class="grid-view-item__link" href="/san-pham/<%= items.id %>">
                                                  <img class="grid-view-item__image" src="/<%= folderUpload + items.images.split(",")[0]%>" alt="" />
