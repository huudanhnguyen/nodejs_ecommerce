                                            <i class="font-13 fa fa-star-o"></i>
                                        </div> -->
                                    </div>
                                    <!-- End product details -->
                                </div> 
                              <%})%>

                        </div>
                    </div>
                </div>
                <hr class="clear">
                <div class="pagination">
                  <ul>
                    <li class="active"><a href="#">1</a></li>
