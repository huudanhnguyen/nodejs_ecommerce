<% include ./../../helpers/filter-status %>
<% include ./../../helpers/action %>
<% include ./../../helpers/pagination %>
<% include ./../../helpers/status %>
<% include ./../../helpers/highlight %>
<% include ./../../helpers/userTimeInfo %>
<% include ./../../helpers/sortField %>
<% include ./../../helpers/image %>
<% include ./../../helpers/selectCategory %>
<% include ./../../helpers/showOptionBox %>
<% include ./../../helpers/getStringLength %>
<% 
	const collection = "products";
	const linkPrefix = systemConfig.prefixAdmin + `/${collection}/`;
	const linkAjax = linkPrefix + 'ajax/';
	const folderUpload 	= `uploads/${collection}/`;
%>

<%- locals.flash %>
<div class="card card-info card-outline">
	<div class="card-header">
		<h6 class="card-title">Tìm Kiếm & Lọc</h6>
		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
				<i class="fas fa-minus"></i></button>
		</div>
	</div>
	<div class="card-body">
		<div class="row justify-content-between">
			<div class="mb-1">
				<%- filterStatusHelper(collection, statusFilter, keyword) %>	 
			</div>
			
			<div class="mb-1">
				<form action="<%= linkPrefix %>status/<%= currentStatus %>" method="GET">
					<div class="input-group">
						<input type="text" class="form-control form-control-sm" name="keyword" value="<%= keyword %>" style="min-width: 300px">
						<div class="input-group-append">
							<a type="button" class="btn btn-sm btn-danger"  href="<%= linkPrefix %>status/<%= currentStatus %>">Xóa</a>
							<button type="submit" class="btn btn-sm btn-info" id="btn-search">Tìm Kiếm</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<div class="card card-info card-outline">
	<div class="card-header">
		<h4 class="card-title">Danh Sách</h4>
		<div class="card-tools">
			<a href="#" class="btn btn-tool"><i class="fas fa-sync"></i></a>
			<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fas fa-minus"></i></button>
		</div>
	</div>
	<div class="card-body">
		<!-- Control -->
		<form action="" method="post" class="table-responsive" id="zt-form">
			<%- actionHelper(collection) %>

			<!-- List Content -->
		
			<table class="table table-bordered table-hover text-nowrap btn-table mb-0">
				<thead>
					<tr>
						<th class="text-center">
							<div class="custom-control custom-checkbox">
								<input class="custom-control-input cbAll" type="checkbox" id="check-all">
								<label for="check-all" class="custom-control-label"></label>
							</div>
						</th>
						<th class="text-center">#</a></th>
						<th class="text-center sort">
							<%- sortField(linkPrefix,'Tên','name',sort) %>
						</th>
						</th>
						<th class="text-center sort">
							<%- sortField(linkPrefix,'Danh Mục','categories',sort) %>
						</th>
						<!-- <th class="text-center">Image</th> -->
						<th class="text-center">Hình Ảnh</a></th>
						<th class="text-center">Giá</a></th>
						<th class="text-center">Trạng Thái</a></th>
						<!-- <th class="text-center">Option</a></th> -->
						<th class="text-center sort">
							<%- sortField(linkPrefix,'Thứ Tự','ordering',sort) %>
						</th>
						<!-- <th class="text-center">Created</a></th> -->
						<th class="text-center">Chỉnh Sửa</a></th>
						<th class="text-center">Thao Tác</th>
					</tr>
				</thead>
				<tbody>
					
					<% items.forEach( (item, index) => { %>
					<tr>
						<td class="text-center">
							<div class="custom-control custom-checkbox">
								<input class="custom-control-input" type="checkbox" id="checkbox-<%= item.id %>" name="cid" value="<%= item.id %>">
								<label for="checkbox-<%= item.id %>" class="custom-control-label"></label>
							</div>
						
						</td>
						<td class="text-center"><%= index+1 %></td>
						<td class="text-center"><%- highlightHelper(item.name, keyword) %></td>
						<td class="text-center position-relative"><%- selectCategory(listCategory,item.categoriesId,'list',null,linkAjax,item.id) %></td>
						<td class="text-center"><%- imageMulti(folderUpload, item.images[0], item.slug); %></td>
						<td class="text-center"><%- highlightHelper(item.price.toLocaleString(), keyword) %> ₫</td>
						<td class="text-center position-relative" id="<%= item.id %>-status">
							<%- statusHelper(collection, item.status, item.id) %>
						</td>
						<!-- <td class="text-center position-relative">
							<div class="option">
							<%- showOptionBox(item.id, item.bestseller, item.newarrivals)  %>
							</div>
						</td> -->
						
						<td class="text-center position-relative">
							<input type="number" value="<%= item.ordering %>" class="text-center ordering" onChange="handleAjax(
								'<%= linkAjax %>',
								'ordering',
								'<%= item.id %>',
								this
								)">
						</td>
						<!-- <td class="text-center">
							<%- showUserTimeInfo(item.createdAt) %>
						</td> -->
						<td class="text-center">
							<%- showUserTimeInfo(item.updatedAt) %>
						</td>
						<td class="text-center">
							<a href="<%= linkPrefix %>form/<%= item.id %>" class="rounded-circle btn btn-sm btn-info" title="Edit">
								<i class="fas fa-pencil-alt"></i>
							</a>

							<a class="rounded-circle btn btn-sm btn-danger btn-delete" title="Delete" data-toggle="modal" href="#exampleModal" data-url='<%= linkPrefix %>delete/<%= item.id %>'>
								<i class="fas fa-trash-alt"></i>
							</a>
						</td>
					</tr>
					<% }) %>
					
				</tbody>
			</table>
		</form>
	</div>
	<div class="card-footer clearfix">
		<%- paginationHelper(pagination, collection, currentStatus, keyword) %>
	</div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Bạn có chắc muốn xóa phần tử này?
      </div>
      <div class="modal-footer">
        <a href="#" class="btn btn-primary">Ok</a>
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script>
	if($('input[name="id"]').val()) {
		$("button[type='submit']").prop("disabled", false)
	}
	$('.add-more').click(function(e) {
		e.preventDefault();
		$('#information div.add').append(
			`<div class="row mb-3">
					<div class="col-md-4">
						<input type="text" class="form-control" placeholder="info" name="infoName">
					</div>
					<div class="col-md-7">
						<input type="text" class="form-control" placeholder="value" name="infoValue">
					</div>
					<div class="col-md-1">
						<button type="button" class="btn btn-danger" onClick="closeInfo(this)">
							<i class="fas fa-times"></i>
						</button>
					</div>
				</div>
		`).children(':last').hide().fadeIn();;
	});

	function closeInfo(obj) {
		$(obj).parent().parent().fadeOut(350, function() {
			$(this).remove();
		});
	}

	function setValueImagesHidden(arrElement = ['.dz-filename span','.showImage img']) {
		let value = '';
		arrElement.forEach(element => {
			$(element).each((index,elm) => {
				console.log(index,elm)
				value += $(elm).data('filename') + ','
			})
			if(value) {
				$("input[name='images']").val(value.substr(0,value.length - 1))
			}
		})
	}
	$('#myDropzone').sortable({
 	  update: function( event, ui ) {
			setValueImagesHidden()
		}
	});

	let myDropzone = new Dropzone("#myDropzone", { 
		url: $("#myDropzone").data('url'),
		paramName: 'fileMulti',
		autoProcessQueue:false,
		addRemoveLinks: true,
		maxFiles:10,
		parallelUploads:10,
		init: function() {
			var myDropzone = this;
				$("button[name='saveImages']").click((e) => {
					$("button[name='saveImages']").prop("disabled", true)
					$("button[type='submit']").prop("disabled", false)
					myDropzone.processQueue();
			});
			myDropzone.on("addedfile", file => {
				$("button[name='saveImages']").prop("disabled", false)
				$("button[type='submit']").prop("disabled", true)
			});
			myDropzone.on("success",(file, res) => {
				$('.dz-filename span').each((index,element) => {
					let fileName = $(element).text();
					if(fileName == res.originalname) {
						$(element).attr('data-filename',res.filename);
					}
				});
				setValueImagesHidden()
			})
		}
	});

	let $gallery = $('.showImage');
	let $trash = $( "#trash" );

	$('.showImage,#trash').sortable({
		connectWith: ".connectedSort",
		update: function( event, ui ) {
			setValueImagesHidden()
		},
	});

</script>