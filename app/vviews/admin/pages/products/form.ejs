<% include ./../../helpers/image %>
<% include ./../../helpers/selectCategory %>
<% 
	const collection="products" ; 
	const linkPrefix=systemConfig.prefixAdmin + `/${collection}/`; 
	errors=errors ?? {};
	const folderUpload=`uploads/${collection}/`; 
%>
<style>
	#myDropzone {
    background: white;
    border-radius: 5px;
    border: 2px dashed rgb(0, 135, 247);
    border-image: none;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
}
</style>
<div class="card card-info card-outline">
	<form action="<%= linkPrefix %>save/" method="POST" class="mb-0" name="form-upload"
		enctype="multipart/form-data">
		<div class="card-body">
			<div class="row">
				<div class="col-md-12">
					<div class="card card-primary">
						<div class="card-body">

                            <div class="form-group row">
                                <label for="name" class="col-sm-2 col-form-label text-sm-right required">Name</label>
                                <div class="col-xs-12 col-sm-8">
                                  <input type="text" name="name" value="<%= item.name %>" class="form-control form-control-sm <%= errors.name && 'is-invalid' %>" onKeyUp="handleSlug(
                                                '<%= linkPrefix %>',
                                                this,
                                                )">
                                  <%- `<span class="error invalid-feedback">${errors.name}</span>` %>
                                </div>
                              </div>
                              <div class="form-group row">
                                <label for="slug" class="col-sm-2 col-form-label text-sm-right required">Slug</label>
                                <div class="col-xs-12 col-sm-8">
                                  <input type="text" name="slug" value="<%= item.slug %>" class="form-control form-control-sm <%= errors.slug && 'is-invalid' %>">
                                  <%- `<span class="error invalid-feedback">${errors.slug}</span>` %>
                                </div>
                              </div>
                              <div class="form-group row">
                                <label for="price" class="col-sm-2 col-form-label text-sm-right required">Price</label>
                                <div class="col-xs-12 col-sm-8">
                                  <input type="text" name="price" value="<%= item.price %>" class="form-control form-control-sm <%= errors.price && 'is-invalid' %>">
                                  <%- `<span class="error invalid-feedback">${errors.price}</span>` %>
                                </div>
                              </div>
                        
                        
                              <div class="form-group row">
                                <label for="name" class="col-sm-2 col-form-label text-sm-right required">Category</label>
                                <div class="col-xs-12 col-sm-8">
                                  <%- selectCategory(listCategory,item.categoriesId,'',errors.categoriesId) %>
                                  </select>
                                </div>
                              </div>
                        
                              <div class="form-group row">
                                <label for="name" class="col-sm-2 col-form-label text-sm-right required">Ordering</label>
                                <div class="col-xs-12 col-sm-8">
                                  <input type="text" name="ordering" value="<%= item.ordering ?? 0 %>" class="form-control form-control-sm <%= errors.ordering && 'is-invalid' %>">
                                  <%- `<span class="error invalid-feedback">${errors.ordering}</span>` %>
                                </div>
                              </div>
							<div class="form-group row">
								<label for="name" class="col-sm-2 col-form-label text-sm-right required">Hình ảnh Sản Phẩm</label>
								<div class="col-xs-12 col-sm-8">
									<div class="card card-primary">
										<div class="card-body">
											<div class="row">
												<div class="form-group col-md-12">
													<div class="dropzone" id="myDropzone" data-url="<%= linkPrefix %>upload/">
														<div class="fallback">
															<input name="fileMulti" type="file" multiple/>
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

							<div class="form-group">
								<label>Description</label>
								<textarea id="editor" name="description"><%= item.description %></textarea>
							</div>	
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="col-12 col-sm-8">
					<input class="form-control" name="id" value="<%= item.id %>" type="hidden">
					<input name="image_old" value="<%= item.thumbnail %>" type="hidden" />
					<input name="image_uploaded" value="" type="hidden" id="image_uploaded" />
					<input name="imagesMulti" value="" type="hidden" />
					<button type="button" name="saveImages" class="btn btn-sm btn-success mr-1" disabled> Save Images</button>
					<button type="submit" class="btn btn-sm btn-success mr-1" disabled> Submit</button>
					<a href="<%= linkPrefix %>" class="btn btn-sm btn-danger mr-1"> Cancel</a>
				</div>
			</div>
	</form>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
<script>
	ClassicEditor
		.create(document.querySelector('#editor'))
		.catch(error => {
			console.error(error);
		});
	function notImage(e, folder) {
		e.setAttribute('src', folder + 'no-avatar.png')
	}
</script>

<script>
	$(document).ready(function() {
		$('.add-more').click(function(e) {
			e.preventDefault();
			$('#infomation div.add').append(
				`<div class="row mb-3">
						<div class="col-md-4">
							<input type="text" class="form-control" placeholder="info" name="infoName">
						</div>
						<div class="col-md-7">
							<input type="text" class="form-control" placeholder="value" name="infoValue">
						</div>
						<div class="col-md-1">
							<button type="button" class="btn btn-danger" onClick="closeInfo(this)">
								<i class="fas fa-times"></i>
							</button>
						</div>
					</div>
			`);
		});
	})
	function closeInfo(obj) {
		$(obj).parent().parent().remove();
	}
	$('#myDropzone').sortable({
 	  update: function( event, ui ) {
			let value = '';
			$('.dz-filename span').each((index,element) => {
				value += $(element).data('filename') + ','
			})
			if(value) {
				$("input[name='imagesMulti']").val(value.substr(0,value.length - 1))
			}
		}
	});

	let myDropzone = new Dropzone("#myDropzone", { 
		url: $("#myDropzone").data('url'),
		paramName: 'fileMulti',
		autoProcessQueue:false,
		addRemoveLinks: true,
		maxFiles:10,
		parallelUploads:10,
		init: function() {
			var myDropzone = this;
				$("button[name='saveImages']").click((e) => {
					$("button[name='saveImages']").prop("disabled", true)
					$("button[type='submit']").prop("disabled", false)
					myDropzone.processQueue();
			});
			myDropzone.on("addedfile", file => {
				$("button[name='saveImages']").prop("disabled", false)
				$("button[type='submit']").prop("disabled", true)
			});
			myDropzone.on("success",(file, res) => {
				$('.dz-filename span').each((index,element) => {
					let fileName = $(element).text();
					if(fileName == res.originalname) {
						$(element).attr('data-filename',res.filename);
					}
				});
				let value = '';
				$('.dz-filename span').each((index,element) => {
					value += $(element).data('filename') + ','
				})
				if(value) {
					$("input[name='imagesMulti']").val(value.substr(0,value.length - 1))
				}
			})
		}
	});
</script>